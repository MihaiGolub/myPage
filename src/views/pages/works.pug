extends ../main.layout.pug

block variables
  - var title = 'Мои Работы'
  

block scripts
  script(src='works.bundle.js')
  
block content
      section.works
        .page-works
          .parallax
            .parallax-layer
              img.parallax__layer-img.img-modify1(src="./assets/images/layer-1.png", alt="")
            .parallax-layer
              img.parallax__layer-img.img-modify2(src="./assets/images/layer-2.png", alt="")
            .parallax-layer
              img.parallax__layer-img(src="./assets/images/layer-3.png", alt="")
            .parallax-layer
              img.parallax__layer-img(src="./assets/images/layer-4.png", alt="")
            .parallax-layer
              img.parallax__layer-img.img-modify5(src="./assets/images/layer-5.png", alt="")
            .parallax-layer
              img.parallax__layer-img(src="./assets/images/layer-6.png", alt="")
            .parallax-layer
              img.parallax__layer-img(src="./assets/images/layer-7.png", alt="")
            .parallax-layer
              img.parallax__layer-img.img-modify8(src="./assets/images/layer-8.png", alt="")
            .parallax-layer
              img.parallax__layer-img(src="./assets/images/layer-9.png", alt="")
            .parallax-layer
              img.parallax__layer-img(src="./assets/images/layer-10.png", alt="")
          header.header.header--works
            .user-wrap
              .user
                .user__photo
                  img.img-border(src="./assets/images/mefunn.jpg", alt="")
                span.user__name Михаил Голубов
                span.user__profession Личный сайт веб разработчика
            .navigation
              .navigation-container
                button.hamburger.hamburger--collapse#ClosedMenu(type='button')
                  span.hamburger-box
                    span.hamburger-inner
                .navigation-open#OpenMenu
                  .navigation-links
                    ul.navigation-links__wrapper
                      li.navigation-links__elem.link-elem--1
                        a.navigation-anchor(href="works.html")
                          p.links-text Мои работы
                      li.navigation-links__elem.link-elem--2
                        a.navigation-anchor(href="blog.html")
                          p.links-text Блог
                      li.navigation-links__elem.link-elem--3
                        a.navigation-anchor(href="about.html")
                          p.links-text Обо мне
                      li.navigation-links__elem.link-elem--4
                        a.navigation-anchor(href="#")
                          p.links-text Авторизация
            .header__arrow-down
              a.svg__arrow-header(href="#aboutContent")
                svg.svg__arow-down
                  use(xlink:href='./assets/images/icons/sprite.svg#arrow_down')
            .header-socials
              .socials
                .social.social--vk
                  a.svg-vk(href="about.html")
                    svg.svg__icon-vk
                      use(xlink:href='./assets/images/icons/sprite.svg#vk')
                .social.social--github
                  a.svg-github(href="#")
                    svg.svg__icon-github
                      use(xlink:href='./assets/images/icons/sprite.svg#github')
                .social.social--in
                  a.svg-in(href="#")
                    svg.svg__icon-in
                      use(xlink:href='./assets/images/icons/sprite.svg#in')
        .works__content
          .works-wrapper
            .works__name-container
              h1.works__name-txt Мои работы
            .slider-container
              #slider-component
        .comment__section#commentSection
          .comment__container#commentContainer
            .comment__container-name
              .coment__name-txt Что обо мне<br>говорят
            .comment__people
              .comment__people-container
                .comment__people-symbol
                .comment__people-text
                  h4 Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse molestiae dolorum enim excepturi aperiam atque consequatur tempora labore praesentium sequi saepe, vero, ut vel cupiditate aliquid nam voluptatem reprehenderit? Architecto!
                .comment__about-people
                  .comment__people-picture
                  .people__date
                    .people__name Ковальчук Дмитрий
                    .people__works основатель Loftschool
              .comment__people-container
                .comment__people-symbol
                .comment__people-text
                  h4 Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse molestiae dolorum enim excepturi aperiam atque consequatur tempora labore praesentium sequi saepe, vero, ut vel cupiditate aliquid nam voluptatem reprehenderit? Architecto!
                .comment__about-people
                  .comment__people-picture.comment__people-picture2
                  .people__date
                    .people__name Сабанцев Владимир
                    .people__works преподаватель
            form(onsubmit='return validate();', instead='', of='').contact__me-form#contactMeForm 
                .b-works-form__blur
                .form.form__contact
                  .name__form
                    .name__form-text Связаться со мной
                label.label-form.field(for="")
                  input(type='text', name='name',required='true', placeholder='  Имя' value="").input-name
                  .error#demo
                label.label-form.field(for="")
                  input(name='email', required='true', type='email', placeholder='  Email')
                  .error#demo
                label.label-form(for="")
                textarea#textareaMessage.field(name='message',required='true', placeholder='  Ваше сообщение')
                .error#demo
                .form__buttons
                  button.form__send#sendContactMe Отправить
                  button.form__clear Очистить
            .slider__arow-up
                  a.svg__arrow-slider(href="works.html")
                    svg.svg__arow-up
                      use(xlink:href='./assets/images/icons/sprite.svg#arrow_down')
        .footer.footer--works
            .footer-contacts
              .footer-left-contacts
                ul.footer-link
                  li
                    a.footer__anchor(href="works.html") Мои работы
                  li
                    a.footer__anchor(href="about.html") Обо мне
                  li
                    a.footer__anchor(href="blog.html") Блог
                  li
                    a.footer__anchor(href="#") Авторизация
              .footer-right-contacts
                .footer-socials
                  .about-footer-socials
                    a.svg__icon-footer(href="#")
                      svg.svg-icon.svg-icon_vk
                        use(xlink:href='./assets/images/icons/sprite.svg#vk')
                    a.svg__icon-footer(href="#")
                      svg.svg-icon.svg-icon_vk
                        use(xlink:href='./assets/images/icons/sprite.svg#github')
                    a.svg__icon-footer(href="#")
                      svg.svg-icon.svg-icon_vk
                        use(xlink:href='./assets/images/icons/sprite.svg#in')
            .footer-copyright
              .footer-copyright-left
                span.make__in Я веб-разработчик из Кишинева, и этот сайт я сделал,<br>в рамках обучения в Школе онлайн образования LoftSchool. 
              .footer-copyright-right
                span.make__off © Голубов Михаил | создано с любовью в LoftSchool | 2019
